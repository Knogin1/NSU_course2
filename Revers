#include <vector>
#include <algorithm> // для std::reverse

// Функция, которая переставляет элементы вектора в обратном порядке на месте
void Reverse(std::vector<int>& v) {
    // Можно реализовать вручную
    size_t left = 0;
    size_t right = v.size() - 1;
    
    while (left < right) {
        std::swap(v[left], v[right]);
        ++left;
        --right;
    }
    
    // Или использовать стандартную функцию:
    // std::reverse(v.begin(), v.end());
}

// Функция, которая возвращает копию вектора с элементами в обратном порядке
std::vector<int> CopyReverse(const std::vector<int>& v) {
    std::vector<int> result;
    result.reserve(v.size()); // Резервируем память для эффективности
    
    // Добавляем элементы в обратном порядке
    for (int i = v.size() - 1; i >= 0; --i) {
        result.push_back(v[i]);
    }
    
    return result;
    
    // Или более короткий вариант с использованием итераторов:
    // return std::vector<int>(v.rbegin(), v.rend());
}
